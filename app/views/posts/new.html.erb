<%= stylesheet_link_tag 'post_new', :media => "all" %>

<div class="post-container">
    <p class="title">投稿フォーム</p>
    <%= form_for(@post, :url => { controller:'posts', action:'create'})do |f| %>
    <%= f.label :投稿内容 %>
        <br>
        <%= f.text_area :content,rows:"10",cols:"80" %>
        <br>

    <div class="field">
        <%= f.label :画像 %>
        <%= f.file_field :image %>
    </div>

    <div class="field">
        <%= f.label :動画 %>
        <%= f.file_field :video %>
    </div>

    <%= f.submit "投稿"%>
    <br>
    <% end %>
</div>